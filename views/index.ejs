<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%= title %></title>
        <!-- BootStrap Link -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Custom CSS -->
        <link rel="stylesheet" href="css/style.css">
    </head>
    <body>
        <div class="head box">
            <h1>To Do List</h1>
        </div>
        <div class="to-do-form box">
            <form action="/" method="post">
                <div class="form-group">
                    <input type="text" class="form-control form-control-lg" name="name" autocomplete="off"
                        placeholder="Enter Item...">
                    <button class="btn btn-success btn-lg">Add +</button>
                </div>
            </form>
        </div>
        <div class="list box">
            <% if (typeof data == typeof []) { %>
            <% data.forEach(item => { %>
            <div class="data box">
                <h2><%= item.name %></h2>
                <a href="/delete/<%= item._id %>">
                    <lord-icon src="https://cdn.lordicon.com/skkahier.json" trigger="hover" colors="primary:#e83a30"
                        style="width:40px;height:40px">
                    </lord-icon>
                </a>
            </div>
            <%  }); %>
            <% }
            else
            { %>
            <h3><%= data %></h3>
            <% } %>
        </div>
        <script src="https://cdn.lordicon.com/lordicon.js"></script>
    </body>
</html>